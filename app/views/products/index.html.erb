<% title "Каталог моделей" %>
	<% meta_description "Женская обувь должна быть разной. У нас вы можете найти десятки моделей, доступных для индивидуального заказа по вашим меркам и желаниям. Смотрите, выбирайте и не бойтесь экспериментировать!" %>

<% if user_signed_in? %>

<div class="admin-buttons">
	<%= link_to 'Добавить модель', new_product_path, class: 'admin-button' %>
	<%= link_to 'Перемешать', changeorder_path, class: 'admin-button position-button' %>
</div>

<% end %>


	<section id="products" data-aos="fade-up">
		<% @products.each do |product| %>
			<%= link_to product_path(product), style: "display: block" do %>
				<div class="product-card">
					<div class="product-thumb">
						<%= image_tag(product.card) if product.cover.attached? %>
					</div>
					<h3 class="product-name">
						<%= product.name %>
					</h3>
					<% if product.new_price %>
					<div class="price-wrapper product-price">
						<span class="price-new">
							<%= "#{product.new_price}".reverse.gsub(/.{3}(?=.)/, '\0 ').reverse %> ₽
						</span>
						<span class="price-line">
							<%= "#{product.price}".reverse.gsub(/.{3}(?=.)/, '\0 ').reverse %> ₽
						</span>
					</div>
					<% else %>
						<div class="product-price"><small>
						<%= "#{product.price}".reverse.gsub(/.{3}(?=.)/, '\0 ').reverse %> ₽
						</small>
						</div>
					<% end %>	
					
				</div>
			<% end %>                       
		<% end %>
	</section>